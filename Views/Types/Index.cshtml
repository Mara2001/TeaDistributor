@using TeaDistributor.DTO

@model IEnumerable<TeaTypeDTO>
@{
    ViewData["Title"] = "Index";
}

<h2>List of all types</h2>

@foreach (var item in Model)
{
    <div class="border border-1 border-dark p-2">
        <h5>@item.Name</h5>
        Id: @item.Id
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
        <form method="post">
            <button type="submit" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</button>
        </form>
    </div>
}
<hr />
<div>
    <a class="btn btn-success" asp-action="Create">Create</a>
</div>


